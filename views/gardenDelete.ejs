<!DOCTYPE html>
<html lang="en">
  <% if (currentUser) { %>
    <head>
      <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Delete garden</title>
      <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body>
      <%- include("navbar") %>
      <div class="pageContainer">
        <h1 class="title">Delete garden "<%= garden.name %>"?</h1>
        <form id="deleteGarden" action="/planner/garden/<%= garden.id %>/delete" method="post">
            <button type="submit" class="deleteGardenBtn">Delete Garden</button>
        </form>
        <a href="/planner/garden/<%= garden.id %>" class="cancelBtn">Cancel</a>
      </div>
    </body>
  <% } else { %>
    <%- include("pageNotFound") %>
  <% } %>
</html>